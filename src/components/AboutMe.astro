<style>
  .about-container {
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .d-flex-r {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .avatar {
    width: 700px;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
  }

  .greeting {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
    text-align: center;
  }

  .greeting-line {
    font-size: 3rem;
    color: white;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.5px;
  }

  .highlight {
    color: #ffd700;
    position: relative;
    display: inline-block;
  }

  .highlight::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 8px;
    bottom: -4px;
    left: 0;
    background-color: #ffd700;
    opacity: 0.2;
    border-radius: 4px;
  }

  .greeting-subtitle {
    font-size: 1.2rem;
    color: white;
    font-weight: 400;
  }

  h1 {
    color: white;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  p {
    color: white;
    line-height: 1.6;
    margin-bottom: 1rem;
    text-align: center;
  }

  .linkedin-button,
  .github-button {
    text-align: center;
    margin-top: 1.5rem;
  }
  .linkedin-button a {
    background-color: #0077b5;
  }
  .github-button a {
    background-color: #656262;
  }
  .linkedin-button a,
  .github-button a {
    display: inline-block;
    padding: 1rem 2rem;
    color: white !important;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 600;
    font-size: 1.1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .linkedin-button a:hover {
    background-color: #005582;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
  }

  .github-button a:hover {
    background-color: #565252;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
  }
</style>
